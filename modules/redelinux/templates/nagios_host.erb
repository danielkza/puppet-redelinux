define host
{
    host_name    <%= @host_name %>
    alias        <%= @alias %>
    address      <%= @address %>
<% if @parents %>
    parents      <%= @parents.join(',') %>
<% end %>
<% if @hostgroups %>
    hostgroups   <%= @hostgroups.join(',') %>
<% if @use %>
    use          <%= @use %>
<% if @check_period %>
    check_period <%= @check_period %>
<% end %>
}
